<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <PreferenceCategory
      app:key="datamanagement_category"
      app:title="Manage Data">

      <Preference
        app:key="manage_shooters"
        app:title="Manage Shooters"
        app:summary="Add, edit or remove shooters."/>

      <Preference
        app:key="manage_formats"
        app:title="Manage Formats"
        app:summary="Add, edit or remove formats."/>

  </PreferenceCategory>

  <PreferenceCategory
      app:key="appsettings_category"
      app:title="App Settings">

    <ListPreference
        app:key="theme_preference"
        app:title="App Theme"
        app:entries="@array/theme_array_entries"
        app:entryValues="@array/theme_array_entryvalues"
        app:defaultValue="@string/theme_def_value"
        app:useSimpleSummaryProvider="true"/>

  </PreferenceCategory>

  <PreferenceCategory
      app:key="about_category"
      app:title="About">

      <Preference
        app:key="getting_started"
        app:title="Getting Started"
        app:summary="Add Explanation Here"/>

      <Preference
        app:key="about"
        app:title="About The Developer"
        app:summary="Add Explanation Here"/>

	  <Preference
        app:key="version"
        app:title="App Version"
        app:summary="@string/app_version"/>

  </PreferenceCategory>

</PreferenceScreen>