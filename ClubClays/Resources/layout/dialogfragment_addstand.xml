<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:text="Stand Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeLabel"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newStandType"
        android:paddingBottom="5dp"
        android:inputType="text" />

    <TextView
        android:text="Stand Format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/formatLabel"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newStandFormat"
        android:paddingBottom="5dp"
        android:inputType="text" />

    <TextView
        android:text="Number of Pairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numOfPairsLabel"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newNumOfPairs"
        android:paddingBottom="5dp"
        android:inputType="number" />

</LinearLayout>
