<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"   
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:title="New Shoot"/>

    <TextView
        android:text="Tracking Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trackingTypeLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/spinnerStyle"
        android:id="@+id/trackingtypePicker"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:text="Disciplines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disciplinesLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
     <Spinner
		android:id="@+id/disciplinesPicker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/spinnerStyle"
        android:id="@+id/datePicker"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <EditText
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationPicker"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:text="Shooters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shootersLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SpinnerStyle_ArrowRight"
        android:id="@+id/shootersPicker"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:text="Stands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/standsLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Known Format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formatKnownLabel"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"/>
        <Switch
            android:id="@+id/simpleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"/>
    </LinearLayout>

    <TextView
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SpinnerStyle_ArrowRight"
        android:id="@+id/standFormatPicker"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:text="Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionsLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <CheckBox 
        android:id="@+id/rotateShootersCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Shooters"/>

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right | center_vertical"
            android:id="@+id/nextButton"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/holo_blue_light"
            android:drawableRight="@drawable/arrow_right"
            android:drawableTint="@android:color/holo_blue_light"/>
    </LinearLayout>
</LinearLayout>
