<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"   
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="New Shoot"/>

    <!-- Event Type,Date, Location, rotate shooters, add shooters. -->  
    <TextView
        android:text="Disciplines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disciplinesLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <Spinner
		android:id="@+id/disciplinesType"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <Spinner
		android:id="@+id/datePicker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <Spinner
		android:id="@+id/locationPicker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="Shooters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shootersLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <Spinner
		android:id="@+id/shootersPicker"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionsLabel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"/>
    <CheckBox android:id="@+id/checkbox_meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate Shooters"
        android:onClick="onCheckboxClicked"/>

</LinearLayout>
