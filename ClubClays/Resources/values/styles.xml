<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">#f2f2f2</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat">
      <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomSheetToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
      <item name="android:textSize">24sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
      <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
      <item name="android:layout">@layout/fragment_settings</item>
    </style>

</resources>
