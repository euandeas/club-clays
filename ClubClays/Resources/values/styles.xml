<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorSecondary">@color/colorAccent</item>
		<item name="colorSurface">#ffffff</item>
		<item name="android:colorBackground">#f2f2f2</item>
		
		<!-- Colors On -->
		<item name="colorOnPrimary">#ff000000</item>
		<item name="colorOnSecondary">#ffffff</item>
		<item name="colorOnSurface">#ff000000</item>
		<item name="colorOnBackground">#ff000000</item>
		<item name="android:textColor">#ff000000</item>	
		
		<!-- Status Bar Style -->
		<item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
		
		<!-- Custom Components Styles -->
        <item name="preferenceTheme">@style/PrefsTheme</item>
		<item name="materialAlertDialogTheme">@style/MaterialAlertDialogStyle</item>
    </style>

	<style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">#000000</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
		
	<style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
    </style>

	<style name="ThemeOverlay.MaterialComponents.Light" parent="ThemeOverlay.MaterialComponents.Light">
         <item name="colorControlNormal">#000000</item>
    </style>
	
	<style name="Base.Widget.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
		<item name="tabSelectedTextColor">@color/colorAccent</item>
		<item name="tabBackground">@color/colorPrimary</item>
	</style>
	
	<style name="MaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		 <item name="materialAlertDialogTitleTextStyle">@style/AlertTitle</item>
		 <item name="android:checkedTextViewStyle">@style/AlertCheckedBody</item>
		 <item name="materialAlertDialogBodyTextStyle">@style/AlertBody</item>
		 <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
		 <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
		 <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
	</style>
	
	<style name="AlertTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>
	
	<style name="AlertCheckedBody" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">#000000</item>
    </style>

	<style name="AlertBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
		<item name="android:textColor">#000000</item>
		<item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
	</style>

	<style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
		<item name="android:textColor">#000000</item>
	</style>
	
    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

</resources>
